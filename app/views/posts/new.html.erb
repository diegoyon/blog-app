<h1>New Post</h1><br>

<%= form_with model: @post, url: author_posts_path, method: :post do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br><br>
  <%= form.label :text %>
  <%= form.text_field :text %><br><br>
  <%= form.submit "Submit" %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
<% end %>